<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <form class="devoured-form">
       <h3>{{this.name}}</h3> <button type="submit">Devoured</button> 
  <input type="hidden" value={{this.id}} class="burger_id">
    </form>
    

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that were devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <h3>{{this.name}}</h3>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button id="burgerID" type="submit">Add Burger</button>
</form>
